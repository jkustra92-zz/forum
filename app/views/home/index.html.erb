<div id = "homepage-container">
  <h1 id = "heading"> SUPER COOL BLOG</h1>
  <% if !user_signed_in? %>
  <br>
  <div id = "button-container">
  <button class = "button"><%=link_to "log in", new_user_session_path%></button>
  <button class = "button"><%=link_to "sign up", new_user_registration_path%></button>
  <% end %>
  </div>
  <div class = "posts-container">
   <h2 class = "user-posts"> ALL POSTS </h2>
  <% @posts.each do |post| %>
    <div class = "single-post">
    <h1 class = "post-title"><%=post.title%></h1>
    <p><%= link_to 'read more', user_post_path(post.user, post.id), :class => 'read-more' %></p>
    </div>
  <% end %>
  <% if user_signed_in?%>
  <button class = "button"><%=link_to "add post", new_user_post_path(@user.id), :class => "addnewbutton"%></button>
  <% end %>
  </div>
</div>