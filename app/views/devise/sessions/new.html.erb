<div id = "loginsignup-container">
  <%=link_to "back to home", home_index_path, :class => "label"%>

  <h2>log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, :class => "label" %><br />
      <%= f.email_field :email, autofocus: true, :class => "input" %>
    </div>

    <div class="field">
      <%= f.label :password, :class => "label" %><br />
      <%= f.password_field :password, autocomplete: "off", :class => "input"%>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, :class => "check_box"%>
        <%= f.label :remember_me, :class => "label" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "log in", :class => "button" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
